<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="clicnet.matrixcryptography.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira sua mensagem:"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criptografar"
        android:layout_below="@+id/tableLayout"
        android:layout_alignLeft="@+id/tableLayout"
        android:layout_alignStart="@+id/tableLayout"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="teste"
        android:inputType="textMultiLine"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tableLayout"
        android:layout_below="@+id/editTextMessage"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/m1_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="11" />

            <EditText
                android:id="@+id/m1_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="12" />
            <EditText
                android:id="@+id/m1_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="13"
                android:visibility="visible"/>
            <EditText
                android:id="@+id/m1_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="14"
                android:visibility="visible"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/m2_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="21" />

            <EditText
                android:id="@+id/m2_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="22" />

            <EditText
                android:id="@+id/m2_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="23"
                android:visibility="visible"/>
            <EditText
                android:id="@+id/m2_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="24"
                android:visibility="visible"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/m3_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="31"
                android:visibility="visible" />

            <EditText
                android:id="@+id/m3_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="32"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/m3_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="33"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/m3_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="34"
                android:visibility="visible"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/m4_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="41"
                android:visibility="visible" />

            <EditText
                android:id="@+id/m4_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="42"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/m4_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="43"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/m4_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="44"
                android:visibility="visible"/>
        </TableRow>
    </TableLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editTextMessage"
        android:layout_toEndOf="@+id/editTextMessage"
        android:layout_toRightOf="@+id/editTextMessage"
        android:layout_alignBottom="@+id/editTextMessage" />


</RelativeLayout>
